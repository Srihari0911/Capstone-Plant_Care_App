<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Shadow Layer-->


    <item android:right="10dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_20sdp" />
            <padding
                android:bottom="1px"
                android:left="1px"
                android:right="1px" />
            <solid android:color="@color/white" />
        </shape>
    </item>

    <!--===============-->


    <item android:right="10dp">
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/_20sdp" />
            <padding android:bottom="1px" />
            <solid android:color="@color/white" />
        </shape>
    </item>

    <!--===============-->


    <item android:right="10dp">
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/_20sdp" />
            <padding
                android:bottom="1px"
                android:left="1px"
                android:right="1px" />
            <solid android:color="@color/white" />
        </shape>
    </item>

    <!--===============-->


    <!--ForeGround-->


    <item android:right="10dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/white"
                />
            <solid android:color="@color/white" />
            <corners
                android:radius="@dimen/_20sdp"
                android:topLeftRadius="0dp" />
        </shape>
    </item>

</layer-list>