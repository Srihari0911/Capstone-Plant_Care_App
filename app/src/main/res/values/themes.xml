<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BloomBundy" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#AFEF233C</item>
        <item name="colorSecondaryVariant">#52EF233C</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>



    <style name="textStyle">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="MainFragViewPagerStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textStyle">bold</item>
    </style>

    //dialog round style

    <style name="CustomAlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:windowBackground">@drawable/round_10</item>
    </style>



    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>

    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_20</item>
    </style>


    <style name="bottomNavigationTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="itemActiveIndicatorStyle">
            @style/Widget.Material3.BottomNavigationView.ActiveIndicator
        </item>
        <item name="itemRippleColor">@color/primary</item>
    </style>

    <style name="BottomNavigationViewTextStyle_Active">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigationViewTextStyle_UnActive">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">#404040</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SearchViewStyle">
        <item name="background">@drawable/edit_text_bg</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColorHint">#8C8686</item>
        <item name="android:hint">"Search photography services"</item>
    </style>

</resources>